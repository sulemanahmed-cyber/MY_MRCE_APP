 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="#B2EBF2"

     android:orientation="vertical">
  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar_admin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#0097A7"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      app:title="Admin"></androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="CSE ASSIGNMENTS"
        android:textColor="#37474f"
        android:textSize="@dimen/_30ssp" />
  <EditText
      android:id="@+id/txt_pdfName_cse"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/_10sdp"
      android:background="@color/light_green"
      android:hint="Enter PDF File Name  (cse_asnmnt/)"
      android:textSize="@dimen/_20ssp" />


  <Button

        android:id="@+id/buttonUpload_cse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"

        android:layout_gravity="center"
         android:layout_marginTop="@dimen/_10sdp"
        android:textSize="22sp"
        android:textStyle="bold"

        android:background="@drawable/round_corner"
        android:text="Upload  (cse_asnmnt/)" />


    <Button
        android:id="@+id/view_cse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btn_action_cse"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"

        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:textSize="22sp"
        android:textStyle="bold"

        android:background="@drawable/round_corner"
        android:text="view Assignments (cse_asnmnt/)" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:layout_marginTop="@dimen/_50sdp"
        android:gravity="center"
        android:text="GALLERY ADMIN"
        android:textColor="#37474f"
        android:textSize="@dimen/_30ssp" />

    <Button
        android:id="@+id/gallery_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="gallery_admin"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"

        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:textSize="22sp"
        android:textStyle="bold"

        android:background="@drawable/round_corner"
        android:text=" gallery_admin" />
 </LinearLayout>

