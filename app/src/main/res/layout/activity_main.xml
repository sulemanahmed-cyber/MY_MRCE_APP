<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2EBF2"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">


    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        />-->


    <LinearLayout
        android:id="@+id/tplyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#0097A7"
            android:textAlignment="textStart"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:titleTextColor="#FFFFFF">

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ViewFlipper
                    android:id="@+id/v_flipper"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/borderrss" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_centerInParent="true"
                    android:clipToPadding="false"
                    android:foregroundGravity="center"
                    android:overScrollMode="never">

                </androidx.viewpager.widget.ViewPager>

                <GridLayout

                    android:id="@+id/gridLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="329dp"
                    android:layout_below="@+id/v_flipper"
                    android:alignmentMode="alignMargins"
                    android:columnCount="3"
                    android:columnOrderPreserved="false"
                    android:padding="14dp"
                    android:rowCount="3"
                    tools:layout_editor_absoluteY="300dp">

                    <androidx.cardview.widget.CardView

                        android:id="@+id/syllabus"
                        style="@style/cardmainbtn"

                        app:cardBackgroundColor="#37474f"
                        app:cardCornerRadius="8dp"

                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="54dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_margin="6dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_library_books_cyan_24dp" />


                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/raleway_semibold"

                                android:text="Syllabus"
                                android:textAlignment="center"
                                android:textColor="#B2EBF2"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/games"
                        style="@style/cardmainbtn"

                        app:cardBackgroundColor="#37474f"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"

                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_view_module_cyan_24dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cources"
                                android:fontFamily="@font/raleway_semibold"
                                android:textAlignment="center"
                                android:textColor="#B2EBF2"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/campus"
                        style="@style/cardmainbtn"

                        app:cardBackgroundColor="#37474f"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"

                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_directions_bus_cyan_24dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Bus \nRoutes"
                                android:fontFamily="@font/raleway_semibold"
                                android:textAlignment="center"
                                android:textColor="#B2EBF2"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/events"
                        style="@style/cardmainbtn"

                        app:cardBackgroundColor="#37474f"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"

                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_event_note_black_24dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Events"
                                android:fontFamily="@font/raleway_semibold"
                                android:textAlignment="center"
                                android:textColor="#B2EBF2"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/notifications"
                        style="@style/cardmainbtn"

                        app:cardBackgroundColor="#37474f"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"

                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:src="@drawable/ic_supervisor_account_black_24dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Faculty"
                                android:fontFamily="@font/raleway_semibold"
                                android:textAlignment="center"
                                android:textColor="#B2EBF2"
                                android:textSize="10dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/calender"
                        style="@style/cardmainbtn"

                        app:cardBackgroundColor="#37474f"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"

                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:src="@drawable/ic_streetview_black_24dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Student \nChapters"
                                android:textAlignment="center"
                                android:fontFamily="@font/raleway_semibold"
                                android:textColor="#B2EBF2"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/faculty"
                        style="@style/cardmainbtn"

                        app:cardBackgroundColor="#37474f"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"

                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="42dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:src="@drawable/ic_canteen_cyan_24dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Canteen"
                                android:fontFamily="@font/raleway_semibold"
                                android:textAlignment="center"
                                android:textColor="#B2EBF2"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView

                        android:id="@+id/about"
                        style="@style/cardmainbtn"

                        app:cardBackgroundColor="#37474f"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_account_balance_black_24dp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About clg"
                                android:textAlignment="center"
                                android:textColor="#B2EBF2"
                                android:fontFamily="@font/raleway_semibold"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/help"
                        style="@style/cardmainbtn"

                        app:cardBackgroundColor="#37474f"
                        app:cardCornerRadius="8dp"

                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"

                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/ic_help_black_24dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Contact"
                                android:textSize="9sp"
                                android:fontFamily="@font/raleway_semibold"
                                android:textAlignment="center"
                                android:textColor="#B2EBF2"
                                  />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>

                <TextView
                    android:id="@+id/m_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />

                <Button
                    android:id="@+id/my_abt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:onClick="my_register"
                    android:text="About Developers"

                    android:background="@drawable/bt_bg"/>

                <Button
                    android:layout_gravity="right"
                    android:id="@+id/logout"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="logout"
                    android:onClick="logout"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bt_cont"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:itemTextColor="@color/reply_orange"
        app:itemIconTint="@color/reply_orange"
        android:background="@color/navy"
         app:menu="@menu/drawer_menu">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>