<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3140C4FF"
    android:orientation="vertical"
    tools:context=".ThirdFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/mrce_main" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/mrce"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/Description"
        android:textAlignment="center"
         android:layout_gravity="center_vertical"
         android:textColor="@color/brown"
        android:textSize="@dimen/_12ssp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_5sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="top"
            android:paddingBottom="@dimen/_20sdp"
            android:text="Approved By AICTE-NewDelhi \n Affiliated To JNTUH\nAccredited by NBA and NAAC\n ISO 9001:2015 Certifies Institution\nRecognition of College Under Section 2(f) and 12(b) of UGC Act,1956\nAccredited By ISO-USA"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MaisammaGuda, DhulaPally Post, Secunderabad, Telangana State-500001"
            android:textAlignment="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_25sdp"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/slidethreeback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"

                android:focusable="true"
                android:fontFamily="@font/cousine_bold"
                android:paddingLeft="@dimen/_90sdp"
                android:text="Back"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_20ssp" />

            <TextView
                android:id="@+id/slidethreenext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/cousine_bold"
                android:paddingLeft="@dimen/_80sdp"
                android:text="@string/done"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_20ssp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>